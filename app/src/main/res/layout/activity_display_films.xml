<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:orientation="vertical"
        android:padding="10px"
        android:weightSum="1"
        tools:context="com.example.vr.kinohelios.DisplayFilmsActivity">

        <ImageView
            android:id="@+id/imageViewDisplayImg"
            android:layout_width="wrap_content"
            android:layout_height="161dp"
            android:layout_marginBottom="30px"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/barry"
            tools:ignore="ContentDescription,PxUsage" />

        <TextView
            android:id="@+id/tytulxd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TytuÅ‚:"
            android:textColor="#f5821e"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textViewDisplayFilmTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:contentDescription="@string/app_name"
            android:text="@string/jakis_tekst"
            android:textColor="#FFF"
            android:visibility="visible"
            tools:ignore="PxUsage"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premiera:"
            android:textColor="#f5821e"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/premiera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textColor="#FFF"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Czas trwania:"
            android:textColor="#f5821e"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/czas_trwania"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/produkcja"
            android:textColor="#f5821e"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/produkcja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opis"
            android:textColor="#f5821e"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewDisplayFilmSubDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:lineSpacingExtra="8sp"
            android:textColor="#FFF" />

    </LinearLayout>
</ScrollView>